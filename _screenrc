termcapinfo xterm* ti@:te@
term xterm
defscrollback 10000
shell -$SHELL
defutf8 on

nethack on

logfile "$HOME/.screen.d/log/%S-%Y%m%d-%n.log"
deflog on

startup_message off

caption always "%{= kW}%-w%{+b Wk}%n %t%{-}%+w"
sorendition "= yk"

hardstatus off
hardstatus ignore

vbell off
bell_msg ""

escape ^g^g
bind 0 remove
bind 1 only
bind 2 split
bind 3 split -v
bind o focus
bind b windowlist -b
bind N colon 'number '
bind S colon 'sessionname '
bind r eval "source $HOME/.screenrc" "echo '.screenrc reloaded!'"


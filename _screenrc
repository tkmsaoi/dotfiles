termcapinfo xterm* ti@:te@
#term xterm
term xterm-256color
defscrollback 10000
shell -$SHELL
defutf8 on

nethack on

startup_message off

caption always "%{= Wk}%-w%{=b rW}%n %t%{= Wk}%+w"
backtick 0 60 60 bash -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*"'
multiuser on
acladd $USER
sorendition "= yk"

hardstatus off
hardstatus ignore

vbell off
bell_msg ""

escape ^t^t
bind 0 remove
bind 1 only
bind 2 split
bind o focus
bind b windowlist -b
bind N colon 'number '
bind S colon 'sessionname '
bind r eval "source $HOME/.screenrc" "echo '.screenrc reloaded!'"

caption always "%{= Wk}%-w%{=b rW}%n %t%{= Wk}%+w"
backtick 0 60 60 bash -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*"'
multiuser on
acladd $USER

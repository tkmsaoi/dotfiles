setopt AUTO_CD
setopt AUTO_LIST
setopt AUTO_MENU
unsetopt AUTO_PARAM_KEYS
setopt AUTO_PUSHD
setopt EXTENDED_HISTORY
setopt HIST_FIND_NO_DUPS
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_DUPS
setopt HIST_NO_FUNCTIONS
setopt HIST_REDUCE_BLANKS
setopt HIST_SAVE_NO_DUPS
setopt LIST_PACKED
unsetopt MENU_COMPLETE
setopt NO_BEEP
setopt PROMPT_SUBST
setopt PUSHD_IGNORE_DUPS
setopt SHARE_HISTORY

#
# Variables
#---

HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000

PROMPT='%F{cyan}%~%f ${vcs_info_msg_0_}
%F{magenta}❯%f '

path=(~/local/bin $path)

if [ -d ~/Library/Android/sdk ]; then
  path=(~/Library/Android/sdk/platform-tools $path)
fi

cdpath=(~/Work)

#
# Functions
#---

chmodd () {
    find "${2:-.}" -type d -print | xargs chmod "$1"
}

chmodf () {
    find "${2:-.}" -type f -print | xargs chmod "$1"
}

colors () {
  for c in {000..255}; do
    echo -n "\e[38;5;${c}m $c" ; [ $(($c%16)) -eq 15 ] && echo
  done
}

if command -v pbcopy >/dev/null 2>&1; then
  pbfilter () {
    pbpaste | "$@" | pbcopy
  }
  alias pbf='pbfilter'
fi

#
# Aliases
#---

alias ll='ls -Fl'
alias la='ls -Fal'
alias less='less -MR'
alias sudo='sudo '
alias g='git'
alias be='bundle exec'
alias findf='find . -type f -name'
alias sqlite3='sqlite3 -column -header'

if command -v gtags >/dev/null 2>&1; then
    alias gtags='gtags --gtagslabel=pygments'
fi

if command -v gdircolors >/dev/null 2>&1; then
    alias dircolors='gdircolors'
    alias ls='gls --color=auto'
elif command -v dircolors >/dev/null 2>&1; then
    alias ls='ls --color=auto'
elif [ "$(uname)" = "Darwin" ]; then
    alias ls='ls -G'
fi

case "$TERM" in
    xterm*|rxvt*) color=yes;;
esac
if [ -n "$color" ]; then
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi
unset color

if command -v diffstat >/dev/null 2>&1; then
    alias diffstat='diffstat -C'
fi

if command -v colordiff >/dev/null 2>&1; then
    alias diff='colordiff'
fi

if [ -x "/Applications/Emacs.app/Contents/MacOS/Emacs" ]; then
    alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs -nw'
fi

if command -v pbcopy >/dev/null 2>&1; then
  alias pbc='pbcopy'
  alias pbp='pbpaste'
fi

#
# Hooks
#---

__refresh_title() {
  if [ "$PWD" = "$HOME" ]; then
    title="~"
  else
    title="$(basename $PWD)"
  fi
  echo -ne "\033]0;$title\007"
}

__refresh_title
chpwd() {
  __refresh_title

  if command -v tree >/dev/null 2>&1; then
    tree -L 1 -C --noreport | awk 'NR >= 2'
  else
    ls
  fi
}

precmd () {
  vcs_info
}

#
# Completion
#---

autoload -Uz compinit

LISTMAX=300

zstyle ':completion::complete:*' use-cache true
zstyle ':completion:*:default' menu select=2
#zstyle ':completion:*' menu select interactive
zstyle ':completion:*' list-separator ''

if [ -e /usr/local/share/zsh-completions ]; then
  fpath=(/usr/local/share/zsh-completions $fpath)
fi

if [ -e ~/.zsh.d/completions ]; then
  fpath=(~/.zsh.d/completions $fpath)
fi

if command -v brew >/dev/null 2>&1; then
  fpath=($(brew --prefix)/share/zsh/site-functions $fpath)
fi

compinit -u

compdef g='git'

#
# vcs_info
#---

autoload -Uz vcs_info

zstyle ':vcs_info:git*' check-for-changes true
zstyle ':vcs_info:git*' stagedstr "*"
zstyle ':vcs_info:git*' unstagedstr "*"
zstyle ':vcs_info:git*' formats "%F{250}%b%c%u%f"
zstyle ':vcs_info:git*' actionformats '%F{250}%b|%a%f'

#
# zsh-autosuggestions
#---

if [ -e /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh ]; then
  source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh
fi

#
# zsh-syntax-highlighting
#---

if [ -e /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]; then
  source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
fi

#
# fzf
#---

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

#
# anyenv
#---

if command -v anyenv >/dev/null 2>&1; then
  eval "$(anyenv init -)"
fi

if command -v npm >/dev/null 2>&1; then
  path=(`npm bin -g` $path)
fi

#---

if [ -e ~/.zshrc.local ]; then
  source ~/.zshrc.local
fi

typeset -U PATH FPATH CDPATH

[core]
	excludesfile = ~/.gitignore
	editor = vim -c \"set fenc=utf-8\"
  preloadindex = false
  pager = delta
[interactive]
  diffFilter = delta --color-only
[color]
	ui = auto
[alias]
  a = add
  b = branch
  c = commit
  d = diff
  f = fetch --tags
  l = log
  m = merge
  s = status
  t = tag
  co = checkout
  cp = cherry-pick
  pl = pull
  ps = push -u
  sm = submodule
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
	trnm = log --no-merges --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
	chase = branch -avv
  au = update-index --assume-unchanged
  nau = update-index --no-assume-unchanged
[diff]
  colorMoved = default
[commit]
  cleanup = scissors
[gc]
	auto = 0
[pull]
	rebase = true
[push]
	default = current
  # default = nothing
[merge]
	ff = false
[pack]
	writeBitmapHashCache = true
[repack]
	writeBitmaps = true
[pager]
	status = true
[user]
	name = Takamasa Aoi
[delta]
  syntax-theme = Dracula
  navigate = true
  line-numbers = true
  side-by-side = true
[include]
  path = ~/.gitconfig.local

syntax on

set nobackup

set encoding=utf-8
set fileencoding=utf-8
set fileencodings=iso-2022-jp,euc-jp,utf-8,ucs-2,cp932,sjis
set fileformat=unix
set fileformats=unix,dos,mac

set tabstop=2
set shiftwidth=2
set smartindent
set smarttab
set expandtab

set ignorecase
set smartcase
set incsearch

"set number
set ruler
set title
set showmatch
set showmode

set backspace=indent,eol,start

nmap <ESC><ESC> ;nohlsearch<CR><ESC>

set hlsearch
set visualbell
set hintchars=asdfghjkl

autocmd LocationChange .* :fmapc
autocmd LocationChange mail\.google\.com/mail :fmap c / j k n p o u e x s r a # [] z ? gi gs gt gd ga gc
autocmd LocationChange www\.google\.co\.jp/reader :fmap! -vkey j k n p m s t v A r S N P X O gh ga gs gt gu u / ?
autocmd LocationChange www\.google\.com/calendar/ :fmap! -vkey -event keydown t a d w m x c e <Del> / + q s ?
autocmd LocationChange spreadsheets\.google\.com/ :fmap! <TAB> <Del>
autocmd LocationChange www\.rememberthemilk\.com/home :fmap j k n i r s d f g y <C-1>,1 <C-2>,2 <C-3>,3 <C-4>,4

let g:direct_sbm_use_services_by_tag = 'h'
let g:direct_sbm_use_services_by_post = 'h'

map j 2<C-e>
map k 2<C-y>
map \\ :sbm [
map <C-\\> :bmlgbm<CR>

inoremap <C-a> <C-v><C-a>
inoremap <C-z> <C-v><C-z>
inoremap <C-c> <C-v><C-c>
inoremap <C-x> <C-v><C-x>
inoremap <C-v> <C-v><C-v>
cnoremap <C-a> <C-v><C-a>
cnoremap <C-z> <C-v><C-z>
cnoremap <C-c> <C-v><C-c>
cnoremap <C-x> <C-v><C-x>
cnoremap <C-v> <C-v><C-v>
